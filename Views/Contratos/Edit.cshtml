@model SISCO_SAYACv3._5.Models.Contratos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Contratos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContratosId" />
            <div class="form-group">
                <label asp-for="fecha_inicio" class="control-label"></label>
                <input asp-for="fecha_inicio" class="form-control" />
                <span asp-validation-for="fecha_inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_fin" class="control-label"></label>
                <input asp-for="fecha_fin" class="form-control" />
                <span asp-validation-for="fecha_fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_contrato" class="control-label"></label>
                <input asp-for="valor_contrato" class="form-control" />
                <span asp-validation-for="valor_contrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tiempo_desfase" class="control-label"></label>
                <input asp-for="tiempo_desfase" class="form-control" />
                <span asp-validation-for="tiempo_desfase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="porcentaje_multa" class="control-label"></label>
                <input asp-for="porcentaje_multa" class="form-control" />
                <span asp-validation-for="porcentaje_multa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="porcentaje_adicional" class="control-label"></label>
                <input asp-for="porcentaje_adicional" class="form-control" />
                <span asp-validation-for="porcentaje_adicional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="observaciones" class="control-label"></label>
                <input asp-for="observaciones" class="form-control" />
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <select asp-for="estado" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContratistasId" class="control-label"></label>
                <select asp-for="ContratistasId" class="form-control" asp-items="ViewBag.ContratistasId"></select>
                <span asp-validation-for="ContratistasId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
